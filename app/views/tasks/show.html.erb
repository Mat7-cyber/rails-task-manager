<h1><%=@task.title%></h1>

<p><%=@task.details %></li>

<p><%= link_to "Back to list", tasks_path %></p>
<p><%= link_to "Edit this task", edit_task_path(@task) %></p>
<%= link_to task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Delete #{@task.title}"} do %>
	<i class="fa-solid fa-trash-can"></i>
<% end %>
